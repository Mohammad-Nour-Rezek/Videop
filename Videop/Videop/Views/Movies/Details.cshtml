@model Videop.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.GenreType</li>    
    <li>Release Date: @Model.Genre.ReleaseDate</li>    
    <li>Date Added: @Model.Genre.DateAdded</li>    
    <li>Number in Stock: @Model.Genre.NumberInStock</li>    
</ul>

